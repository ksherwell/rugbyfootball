<?xml version="1.0"?>
<config>
	<modules>
		<RapidCommerce_Browserupgrade>
			<version>1.0.0</version>
		</RapidCommerce_Browserupgrade>
	</modules>
	
	<global>
		<blocks>
			<browserupgrade>
				<class>RapidCommerce_Browserupgrade_Block</class>
			</browserupgrade>
		</blocks>
		<helpers>
			<browserupgrade>
				<class>RapidCommerce_Browserupgrade_Helper</class>
			</browserupgrade>
		</helpers>
	</global>
	
	<frontend>
		<layout>
			<updates>
				<rapidcommerce_browserupgrade>
					<file>browserupgrade.xml</file>
				</rapidcommerce_browserupgrade>
			</updates>
		</layout>
		
		<translate>
			<modules>
				<RapidCommerce_Browserupgrade>
					<files>
						<default>RapidCommerce_Browserupgrade.csv</default>
					</files>
				</RapidCommerce_Browserupgrade>
			</modules>
		</translate>
	</frontend>

	<adminhtml>
		<translate>
			<modules>
				<RapidCommerce_Browserupgrade>
					<files>
						<default>RapidCommerce_Browserupgrade.csv</default>
					</files>
				</RapidCommerce_Browserupgrade>
			</modules>
		</translate>
	</adminhtml>
	
	<default>
		<web>
			<browserupgrade>
				<enabled>0</enabled>
				<autoupdate>1</autoupdate>
				<reminder>24</reminder>
			</browserupgrade>
		</web>
	</default>
</config>
